<%= render 'shared/errors', obj: @message %>
<%= render 'shared/header', message: "New Message to #{@user.username}", link: false, path: false %>

<%= form_for [@user, @message] do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Message" %>
  <%= f.text_area :body, rows: 14 %>
  <%= button_to "Send Message", new_user_message_path(@user, @message), method: :post, class: "btn" %>
<% end %>
