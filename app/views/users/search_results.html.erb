<%= render 'shared/header', message: "Search Results", link: false, path: false %>

<% if @users.blank? %>
  <p>No Matches</p>
<% else %>
  <ul>
    <% @users.each do |user| %>
      <li>
        <div class="float_left", style="padding-bottom:30px">
          <%#= link_to image_tag("http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest("#{user.email}".downcase)}?s=80"), user_path(user) %>
          <%= link_to user.profile_picture, user_path(user) %>
        </div>
        <div class="float_right">
          <h4><%= link_to user.username, user_path(user) %></h4>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
