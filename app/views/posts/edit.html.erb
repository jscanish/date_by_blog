<%= render 'shared/errors', obj: @post %>
<%= render 'shared/header', message: "#{@post.title}", link: false, path: false %>

<%= form_for [@user, @post] do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <%= f.label :body, "Content" %>
  <%= f.text_area :body, rows: 14 %>
  <br/>
  <%= button_to "Submit", user_posts_path(@user, @post), method: :patch, class: 'btn' %>
<% end %>
